                              <FontAwesomeIconView glyphName="ARROW_LEFT" />
                           </graphic>
                        </Button>
                        <Button fx:id="rightBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="143.0">
                           <graphic>
                              <FontAwesomeIconView glyphName="ARROW_RIGHT" size="" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
