            <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" prefHeight="39.0" prefWidth="797.0">
               <children>
                  <Label fx:id="dateLbl" prefHeight="36.0" prefWidth="659.0" text="Fecha">
