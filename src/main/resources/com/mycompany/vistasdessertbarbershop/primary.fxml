                  <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="145.0" spacing="10.0">
                     <children>
                        <Button fx:id="leftBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="143.0">
